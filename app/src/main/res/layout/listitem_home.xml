<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:background="@drawable/selector_bg"
                android:elevation="@dimen/dp1"
                android:orientation="vertical"
                android:padding="@dimen/dp10">

    <ImageView
        android:id="@+id/iv_home_avatar"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_marginRight="@dimen/dp10"/>

    <TextView
        android:id="@+id/tv_home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_home_avatar"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/font_gray1"
        android:textSize="@dimen/font_l"/>

    <TextView
        android:id="@+id/tv_home_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp5"
        android:layout_toRightOf="@id/iv_home_avatar"
        android:textColor="@color/gray1"
        android:textSize="@dimen/font_m"/>

    <ImageView
        android:id="@+id/iv_home_mark"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/tv_home_title"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp5"
        android:layout_toRightOf="@id/tv_home_date"
        android:src="@mipmap/ic_launcher"/>

</RelativeLayout>